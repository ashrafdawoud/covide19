<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

   <data>

   </data>

   <androidx.core.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@color/major_back"
       tools:context=".View.MainActivity">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">

         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Address"
             android:textColor="@color/white"
             android:textAlignment="center"
             android:textSize="20dp"
             android:paddingEnd="40dp"
             android:paddingStart="40dp"
             android:layout_marginTop="10dp"
             android:layout_marginBottom="10dp" />

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_marginEnd="10dp"
             android:layout_marginStart="10dp"
             android:layout_height="150dp"
             android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/covide"
                android:layout_weight="2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_weight="1">

               <TextView
                   android:id="@+id/number_of_ifected"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="0000"
                   android:lines="1"
                   android:textColor="@color/white"
                   android:textAlignment="center"
                   android:textSize="18dp"
                   android:paddingEnd="10dp"
                   android:paddingStart="10dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginBottom="10dp" />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Total Cases"
                   android:textColor="@color/white"
                   android:textAlignment="center"
                   android:textSize="18dp"
                   android:paddingEnd="40dp"
                   android:paddingStart="40dp"
                   android:layout_marginBottom="10dp" />
               <TextView
                   android:id="@+id/number_of_recoverd"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="0000"
                   android:lines="1"
                   android:textColor="@color/white"
                   android:textAlignment="center"
                   android:textSize="18dp"
                   android:paddingEnd="10dp"
                   android:paddingStart="10dp"
                   android:layout_marginTop="2dp"
                   android:layout_marginBottom="10dp" />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Total Recoverd"
                   android:textColor="@color/white"
                   android:textAlignment="center"
                   android:textSize="18dp"
                   android:paddingEnd="40dp"
                   android:paddingStart="40dp"
                   android:layout_marginBottom="10dp" />
            </LinearLayout>
         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/placesmap"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardCornerRadius="10dp"
                android:elevation="0dp"
                android:layout_weight="1"
                android:backgroundTint="@color/cards_back"
                android:layout_margin="10dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="placesmap">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical">

                  <ImageView
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:layout_margin="5dp"
                      android:src="@drawable/ic_places_map"
                      android:tint="@color/major"
                      android:padding="20dp" />

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:lines="1"
                      android:text="Places Map"
                      android:textSize="18dp"
                      android:textColor="@color/white"
                      android:layout_margin="10dp"
                      android:textAlignment="center" />
               </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/infectedMap"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardCornerRadius="10dp"
                android:elevation="0dp"
                android:backgroundTint="@color/cards_back"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="infectedmap">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical">

                  <ImageView
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:src="@drawable/ic_infected_map"
                      android:layout_margin="5dp"
                      android:padding="20dp"
                      android:tint="@color/major" />

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:lines="1"
                      android:text="Infected Map"
                      android:textSize="18dp"
                      android:textColor="@color/white"
                      android:layout_margin="10dp"
                      android:textAlignment="center" />
               </LinearLayout>
            </androidx.cardview.widget.CardView>
         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/statistics"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardCornerRadius="10dp"
                android:elevation="0dp"
                android:layout_weight="1"
                android:backgroundTint="@color/cards_back"
                android:layout_margin="10dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="statistics">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical">

                  <ImageView
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:src="@drawable/ic_statistics"
                      android:padding="20dp"
                      android:tint="@color/major" />

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:lines="1"
                      android:text="Statistics"
                      android:textSize="18dp"
                      android:textColor="@color/white"
                      android:layout_margin="10dp"
                      android:textAlignment="center" />
               </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/register_infected"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardCornerRadius="10dp"
                android:elevation="0dp"
                android:backgroundTint="@color/cards_back"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="registerAdvices">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical">

                  <ImageView
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:src="@drawable/ic_register_infected"
                      android:padding="20dp"
                      android:tint="@color/major" />

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:lines="1"
                      android:text="Register Infected"
                      android:textSize="18dp"
                      android:textColor="@color/white"
                      android:layout_margin="10dp"
                      android:textAlignment="center" />
               </LinearLayout>
            </androidx.cardview.widget.CardView>
         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/advise"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardCornerRadius="10dp"
                android:elevation="0dp"
                android:layout_weight="1"
                android:backgroundTint="@color/cards_back"
                android:layout_margin="10dp"
                android:clickable="true"
                android:onClick="advises"
                android:foreground="?attr/selectableItemBackground">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical">

                  <ImageView
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:src="@drawable/ic_advice"
                      android:padding="20dp"
                      android:tint="@color/major" />

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:lines="1"
                      android:text="Advices"
                      android:textSize="18dp"
                      android:textColor="@color/white"
                      android:layout_margin="10dp"
                      android:textAlignment="center" />
               </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardCornerRadius="10dp"
                android:elevation="0dp"
                android:backgroundTint="@color/cards_back"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="logout">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical">

                  <ImageView
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_weight="1"
                      android:src="@drawable/ic_logout"
                      android:padding="20dp"
                      android:tint="@color/major" />

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:lines="1"
                      android:text="Logout"
                      android:textSize="18dp"
                      android:textColor="@color/white"
                      android:layout_margin="10dp"
                      android:textAlignment="center" />
               </LinearLayout>
            </androidx.cardview.widget.CardView>
         </LinearLayout>
      </LinearLayout>

   </androidx.core.widget.NestedScrollView>
</layout>